---
import Layout from '../layouts/Layout.astro';
import WeatherDisplay from '../components/WeatherDisplay.astro';
import { getCoordinates, getWeatherData } from '../utils/api';
import { processWeatherData } from '../utils/weather';
import { getTranslation, getCurrentLanguage } from '../utils/i18n';

const defaultCity = "Madrid";
const currentLang = getCurrentLanguage();

let currentWeather;
let error = null;

try {
  const { latitude, longitude, name } = await getCoordinates(defaultCity);
  const weatherData = await getWeatherData(latitude, longitude);
  currentWeather = processWeatherData(weatherData, name, latitude);
} catch (e) {
  error = e.message;
  console.error('Error fetching initial weather data:', e);
}
---

<Layout title={getTranslation('appTitle', currentLang)}>
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header with title and settings -->
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-5xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        {getTranslation('appTitle', currentLang)}
      </h1>
      
      <!-- Settings Button -->
      <button 
        id="settings-btn"
        class="bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-300 p-3 rounded-xl shadow-lg hover:shadow-xl border border-gray-200 dark:border-gray-600 group"
        title={getTranslation('settings', currentLang)}
      >
        <svg class="w-6 h-6 text-gray-600 dark:text-gray-300 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </button>
    </div>
    
    <!-- Settings Panel -->
    <div id="settings-panel" class="hidden mb-8 bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-gray-200 dark:border-gray-600 overflow-hidden">
      <div class="p-6">
        <h2 class="text-xl font-semibold mb-6 text-gray-900 dark:text-white flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span id="settings-title">{getTranslation('settings', currentLang)}</span>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Theme Toggle -->
          <div class="space-y-3">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300" id="theme-label">
              {getTranslation('theme', currentLang)}
            </label>
            <div class="flex bg-gray-100 dark:bg-gray-700 rounded-lg p-1">
              <button 
                id="light-theme-btn"
                class="flex-1 flex items-center justify-center px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 theme-btn"
              >

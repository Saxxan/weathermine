        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto mb-4"></div>
        <p class="text-gray-600 dark:text-gray-400">${getTranslation('loadingWeatherData', currentLang)}</p>
      </div>
    `;

    try {
      const weatherData = await getWeatherData(latitude, longitude);
      const currentWeather = processWeatherData(weatherData, cityName, latitude);
      displayWeatherData(currentWeather);
    } catch (error) {
      console.error('Error fetching weather data:', error);
      weatherContainer.innerHTML = `
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-6 text-center">
          <p class="text-red-600 dark:text-red-400 text-lg">${getTranslation('failedToFetch', currentLang)}</p>
